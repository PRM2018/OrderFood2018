<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Waiter Activity-->

    <style name="ItemNo">
        <item name="android:text">@string/tv_table_no</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemQuantity" parent="ItemNo">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ItemName">
        <item name="android:text">@string/tv_table_name</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!--Profile Activity-->
    <style name="ProfileContent">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_alignStart">@id/tv_user_id</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ProfileLabel">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfileButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_below">@id/tv_label_user_role</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProfileButtonSave" parent="ProfileButton">
        <item name="android:layout_marginStart">80dp</item>
    </style>

    <style name="ProfileButtonCancel" parent="ProfileButton">
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!--Table Detail Activity-->

    <style name="TableDetailTextView">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TableDetailButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="TableDetailButtonAddFood" parent="TableDetailButton">
        <item name="android:background">@color/backgroundTransparentGreen</item>
        <item name="android:drawableStart">@drawable/ic_add_shopping_cart_white_24dp</item>
        <item name="android:text">@string/btn_add_food</item>
    </style>

    <style name="TableDetailButtonCheckout" parent="TableDetailButton">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@color/colorRed</item>
        <item name="android:drawableStart">@drawable/ic_shopping_cart_white_24dp</item>
        <item name="android:text">@string/btn_checkout</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <!--Add employee Activity-->

    <style name="AddEmployeeActivity">
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="AddEmployeeTextView" parent="AddEmployeeActivity">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AddEmployeeLabel" parent="AddEmployeeActivity">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AddEmployeeEditText" parent="AddEmployeeActivity">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
