<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AdminActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_admin"
        android:layout_width="match_parent"
        android:layout_height="37dp">

        <android.support.design.widget.TabItem
            android:id="@+id/tab_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_manage_employee" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_manage_food" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_admin"
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

</RelativeLayout>