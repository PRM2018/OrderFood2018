<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_emp_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_emp_no"
        style="@style/WaiterItemTableNo"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <View
        style="@style/WaiterItemView"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_emp_name"
        style="@style/WaiterItemTableName"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="@string/tv_table_name" />

    <View
        style="@style/WaiterItemView"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_emp_role"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView" />

</LinearLayout>